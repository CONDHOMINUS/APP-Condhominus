<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/fastAutoCompleteViewGroup"
    android:layout_height="wrap_content">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputView"
        style="@style/EditTextLayoutBackgroundGray"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="06dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            style="@style/CondhominusEditTextEditTextAutoComplete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dropDownAnchor="@id/autoCompleteTextView"
            android:padding="06dp"
            tools:hint="Auto Complete" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/arrowDownView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_arrow_down_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textInputView"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>