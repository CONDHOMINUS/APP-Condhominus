<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
    </style>

    <style name="CondhominusLoading" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/green_pattern_secondary</item>
    </style>

    <style name="CondhominusEditText" parent="Widget.AppCompat.EditText">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:minHeight">38dp</item>
        <item name="android:paddingStart">08dp</item>
        <item name="android:paddingEnd">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/grey_chalice</item>
        <item name="android:background">@color/color_primary_transparent</item>
        <item name="android:textCursorDrawable">@drawable/black_cursor</item>
    </style>

    <style name="CondhominusEditTextEditTextAutoComplete" parent="CondhominusEditText">
        <item name="android:popupBackground">@drawable/new_dialog_rounded_background</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">none</item>
        <item name="android:textCursorDrawable">@color/black_primary</item>
        <item name="android:textColorHint">@color/grey_chalice</item>
    </style>

    <style name="EditTextLayoutBackgroundGray">
        <item name="android:background">@drawable/background_edit_text_gray</item>
        <item name="hintEnabled">false</item>
        <item name="android:paddingStart">08dp</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="ButtonAllCaps" parent="android:Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:paddingBottom">08dp</item>
        <item name="android:paddingTop">08dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:paddingEnd">28dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_pattern</item>
    </style>
</resources>